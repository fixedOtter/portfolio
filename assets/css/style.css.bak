.topBar {
  display: flex;
  margin-left: auto;
  margin-right: auto;
  background-color: #f8e7ff;
  justify-content: space-between;
  align-items: center;
  padding: 1vmin;
}
.topBar h1 {
  background-color: slateblue;
  border-radius: .1rem .1rem;
  font-size: 2rem;
  color: hotpink;
}
.topBar nav a {
  font-size: 24px;
  margin: 1rem;
}
.logo {
  width: 5vmin;
  height: 5vmin;
}
banner-image img {
  margin-left: auto;
  margin-right: auto;
  min-width: 100%;
  height: 25%;
}

flex-container {
  display: flex;
}
flex-container aside {
  flex: 1;
  background-color: darkslateblue;
  padding: 1em;
}
flex-container article {
  flex: 5;
  background-color: lightcoral;
  padding: 1em;

  display: flex;
}
footer {
  background-color: orchid;
  padding: 1em;
}